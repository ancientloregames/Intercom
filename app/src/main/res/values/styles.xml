<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="AnswerDialog" parent="Theme.AppCompat.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowTitleStyle">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="authTitle" parent="@style/TextAppearance.AppCompat.Title">
		<item name="android:textColor">@color/defaultTextColor</item>
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="authField" parent="@style/TextAppearance.AppCompat.Medium">
		<item name="android:textColor">@color/defaultTextColor</item>
		<item name="android:textSize">17sp</item>
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="chatMsgText" parent="@style/TextAppearance.AppCompat.Medium">
		<item name="android:textColor">@color/defaultTextColor</item>
		<item name="android:textSize">16sp</item>
		<item name="android:gravity">start</item>
		<item name="android:paddingBottom">1dp</item>
	</style>

	<style name="chatMsgFileTitle" parent="chatMsgText">
		<item name="android:textStyle">bold</item>
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="chatMsgFileInfo" parent="@style/TextAppearance.AppCompat.Medium">
		<item name="android:textColor">@color/defaultSubtitleColor</item>
		<item name="android:textSize">12sp</item>
		<item name="android:gravity">start</item>
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
		<item name="android:paddingBottom">1dp</item>
	</style>

	<style name="chatMsgTimestamp" parent="@style/TextAppearance.AppCompat.Small">
		<item name="android:textColor">@color/chatMsgTimestampColor</item>
		<item name="android:textSize">10sp</item>
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:layout_gravity">bottom</item>
		<item name="android:drawablePadding">2dp</item>
	</style>

	<style name="onelineTextField" parent="@style/TextAppearance.AppCompat">
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="settingsIconedTextItem" parent="@style/TextAppearance.AppCompat.Medium">
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textColor">@color/settingsItemTextColor</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:gravity">start|center_vertical</item>
		<item name="android:drawablePadding">20dp</item>
		<item name="android:background">@drawable/bg_ripple_effect_gray</item>
		<item name="android:paddingStart">20dp</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingEnd">20dp</item>
		<item name="android:paddingRight">20dp</item>
		<item name="android:paddingTop">15dp</item>
		<item name="android:paddingBottom">15dp</item>
	</style>

	<style name="settingsSectionTitle" parent="@style/TextAppearance.AppCompat.Title">
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textColor">@color/settingsSectionTitleTextColor</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:gravity">start|center_vertical</item>
		<item name="android:paddingStart">20dp</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingEnd">20dp</item>
		<item name="android:paddingRight">20dp</item>
		<item name="android:paddingTop">15dp</item>
		<item name="android:paddingBottom">10dp</item>
	</style>

	<style name="userSettingsItemDivider">
		<item name="android:layout_marginStart">20dp</item>
		<item name="android:layout_marginLeft">20dp</item>
		<item name="android:layout_height">0.5dp</item>
		<item name="android:background">@color/settingsItemDividerColor</item>
	</style>

	<style name="settingsDoubleTextItemUp" parent="@style/TextAppearance.AppCompat.Medium">
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textColor">@color/defaultTextColor</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:gravity">start|center_vertical</item>
		<item name="android:paddingStart">20dp</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingEnd">20dp</item>
		<item name="android:paddingRight">20dp</item>
		<item name="android:paddingTop">15dp</item>
	</style>

	<style name="settingsDoubleTextItemDown" parent="@style/TextAppearance.AppCompat.Medium">
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textColor">@color/defaultSubtitleColor</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">14sp</item>
		<item name="android:gravity">start|center_vertical</item>
		<item name="android:paddingStart">20dp</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingEnd">20dp</item>
		<item name="android:paddingRight">20dp</item>
		<item name="android:paddingBottom">10dp</item>
	</style>

</resources>
