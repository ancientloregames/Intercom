<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="authTitle" parent="@style/TextAppearance.AppCompat.Title">
		<item name="android:textColor">@color/defaultTextColor</item>
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="authField" parent="@style/TextAppearance.AppCompat.Medium">
		<item name="android:textColor">@color/defaultTextColor</item>
		<item name="android:textSize">17sp</item>
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="chatMsgText" parent="@style/TextAppearance.AppCompat.Medium">
		<item name="android:textColor">@color/defaultTextColor</item>
		<item name="android:textSize">16sp</item>
		<item name="android:gravity">start</item>
		<item name="android:textStyle"></item>
		<item name="android:paddingBottom">1dp</item>
	</style>

	<style name="chatMsgTimestamp" parent="@style/TextAppearance.AppCompat.Small">
		<item name="android:textColor">@color/chatMsgTimestampColor</item>
		<item name="android:textSize">10sp</item>
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:layout_gravity">bottom</item>
	</style>

	<style name="onelineTextField" parent="@style/TextAppearance.AppCompat">
		<item name="android:maxLines">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

</resources>
