<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools">
	<data>
		<variable
				name="ui"
				type="com.ancientlore.intercom.ui.chat.creation.description.ChatCreationDescAdapter.ViewHolder"/>
	</data>

	<LinearLayout
			android:layout_width="65dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp">

		<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/selectedListView"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:paddingTop="10dp"
				android:orientation="horizontal"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				tools:listitem="@layout/chat_creation_selected_list_item"
				/>

		<com.ancientlore.intercom.view.CircleImageView
				android:layout_width="match_parent"
				android:layout_height="65dp"
				app:backgroundColor="@color/colorPrimary"
				tools:src="@drawable/ic_avatar"
			/>

		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text=""
				tools:text="@string/username"
				style="@style/onelineTextField"
			/>

	</LinearLayout>
</layout>